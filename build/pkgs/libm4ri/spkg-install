#!/usr/bin/env bash

if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting"
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

unset RM

ROOT_DIR="`pwd`"

INCLUDES="-I$SAGE_LOCAL/include"
LIBDIRS="-L$SAGE_LOCAL/lib"

CFLAGS="$CFLAGS $INCLUDES $LIBDIRS -g"

COMPILER=`./testcc.sh`

if [ "x$COMPILER"  = "xGNU" ] ; then
   CFLAGS="$CFLAGS -fPIC -Wall -pedantic"
elif [ "x$COMPILER" = "xSun_on_Solaris" ] ; then
   CFLAGS="$CFLAGS -Kpic"
elif [ "x$COMPILER" = "xHP_on_HPUX" ] ; then
   CFLAGS="$CFLAGS + z"
fi

CPPFLAGS="$INCLUDES"

if [ "x$SAGE_DEBUG" = "xyes" ]; then
   CFLAGS="$CFLAGS -O0"
   ENABLE_DEBUG="--enable-debug"
else
   CFLAGS="$CFLAGS -O2"
   ENABLE_DEBUG=""
fi

if [ "x$SAGE64" = "xyes" ]; then
    CFLAGS="$CFLAGS -m64"
    CPPFLAGS="$CPPFLAGS -m64"
    CXXFLAGS="$CXXFLAGS -m64"
    # FIXME: Do we need LDFLAGS here, too?
    #        But looks as if all linking is performed by libtool/
    #        gcc, so we do not really need it here.
fi

export CFLAGS
export CPPFLAGS
export CXXFLAGS
# export LDFLAGS

if [ "x$SAGE_FAT_BINARY" = "xyes" ]; then
    DISABLE_SSE2="--disable-sse2"
    ENABLE_CACHETUNE=""
else
    DISABLE_SSE2=""
    ENABLE_CACHETUNE="--enable-cachetune"
fi

#build M4RI

cd $ROOT_DIR/m4ri

$MAKE distclean

cd $ROOT_DIR/build/m4ri

$ROOT_DIR/m4ri/configure --prefix=$SAGE_LOCAL $ENABLE_DEBUG $DISABLE_SSE2 $ENABLE_CACHETUNE

if [ $? -ne 0 ]; then
    echo "Error configuring libm4ri"
    exit 1
fi

$MAKE

if [ $? -ne 0 ]; then
    echo "Error building libm4ri"
    exit 1
fi

$MAKE install

if [ $? -ne 0 ]; then
    echo "Error installing libm4ri"
    exit 1
fi

cd ..

# build M4RIE

cd $ROOT_DIR/m4rie

$MAKE distclean

cd $ROOT_DIR/build/m4rie
$ROOT_DIR/m4rie/configure --prefix=$SAGE_LOCAL $ENABLE_DEBUG $DISABLE_SSE2 $ENABLE_CACHETUNE

if [ $? -ne 0 ]; then
    echo "Error configuring libm4rie"
    exit 1
fi

$MAKE

if [ $? -ne 0 ]; then
    echo "Error building libm4rie"
    exit 1
fi

$MAKE install

if [ $? -ne 0 ]; then
    echo "Error installing libm4rie"
    exit 1
fi

