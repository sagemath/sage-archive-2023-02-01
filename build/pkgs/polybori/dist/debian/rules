#!/usr/bin/make -f

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/rules/patchsys-quilt.mk
include debian/cdbs/scons.mk

PYTHON = /usr/bin/python2.5
PYTHONSITE = `$(PYTHON) -c 'import setuptools; print setuptools.distutils.sysconfig.get_python_lib() '`

DEB_SCONS_INSTALL_TARGET = install devel-install
DEB_SCONS_INSTALL_OPTIONS += INSTALLDIR=$(DEB_DESTDIR)/usr/lib/polybori PYINSTALLPREFIX=$(DEB_DESTDIR)$(PYTHONSITE) PREFIX=$(DEB_DESTDIR)/usr EPREFIX=$(DEB_DESTDIR)/usr/bin DOCDIR=$(DEB_DESTDIR)/usr/share/doc/polybori PBP=$(PYTHON)
