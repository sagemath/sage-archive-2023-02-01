lib:
	make setup1
	make setup2
	make setup3
	make libntl.so

libntl.dylib: $(OBJ)
	$(CXX) -single_module -fPIC -dynamiclib -o libntl.dylib $(OBJ) $(GMP_LIBDIR) $(GMP_LIB)

libntl.dll: $(OBJ)
	$(CXX) -fPIC -shared -o libntl.dll $(OBJ) -lgmp

libntl.so: $(OBJ)
	$(CXX) -fPIC -shared -o libntl.so $(OBJ)


