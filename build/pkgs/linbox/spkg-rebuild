#!/bin/sh

if [ `uname` != "Linux" ]; then
    echo "Package can only be rebuilt on Linux systems."
    exit 1
fi

rm -rf tmp
mkdir tmp
cd tmp
svn export svn://linalg.org/linalg/trunk/linbox/

if [ $? -ne 0 ]; then
   echo "Error grabbing linbox from svn"
   exit 1
fi

cd linbox
./autogen.sh
rm -rf autom4te.cache install-sh missing depcomp INSTALL mkinstalldirs

cd ../../
rm -rf linbox
mv tmp/linbox .
rm -rf tmp

