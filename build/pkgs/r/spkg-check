#!/bin/bash

if [ "$SAGE_LOCAL" = "" ]; then
    echo >&2 "SAGE_LOCAL undefined ... exiting";
    exit 1
fi

## Saturday night special for the ill-formed R-3.2.4-revised.tar.gz release
ln -s R-revised src

cd src
$MAKE check
if [ $? -ne 0 ]; then
    echo >&2 "Error while running the R testsuite ... exiting"
    exit 1
fi

