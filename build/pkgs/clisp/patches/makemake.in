    fi
    echotab_mkdir_maybe "\$(DESTDIR)\$(datadir)"
    echotab_mkdir_maybe "\$(DESTDIR)\$(elispdir)"
    echotab_mkdir_maybe "\$(DESTDIR)\$(mandir)"
    echotab_mkdir_maybe "\$(DESTDIR)\$(mandir)/man1"
    case "$fsstnd" in
