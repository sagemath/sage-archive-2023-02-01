#!/bin/sh


if [ "`uname`" = "Darwin" -a "`uname -p`" = "i386" ]; then
    echo "No need to build blas on OSX Intel."
    exit 0
fi

cd src

sage_fortran -c -fPIC *.f

if [ $? -ne 0 ]; then
    echo "Error compiling blas."
    exit 1
fi

ar -r libblas.a *.o
ranlib libblas.a

cp libblas.a "$SAGE_LOCAL"/lib/libblas.a

