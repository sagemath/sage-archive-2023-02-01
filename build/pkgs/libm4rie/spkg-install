#!/usr/bin/env bash

if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting"
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

unset RM

ROOT_DIR="`pwd`"

INCLUDES="-I$SAGE_LOCAL/include"
LIBDIRS="-L$SAGE_LOCAL/lib"

CFLAGS="$CFLAGS $INCLUDES -g"
LDFLAGS="$LIBDIRS"

COMPILER=`./testcc.sh`

if [ "x$COMPILER"  = "xGNU" ] ; then
   CFLAGS="$CFLAGS -fPIC -Wall -pedantic"
elif [ "x$COMPILER" = "xSun_on_Solaris" ] ; then
   CFLAGS="$CFLAGS -Kpic"
elif [ "x$COMPILER" = "xHP_on_HPUX" ] ; then
   CFLAGS="$CFLAGS + z"
fi

CPPFLAGS="$INCLUDES"

if [ "x$SAGE_DEBUG" = "xyes" ]; then
   CFLAGS="$CFLAGS -O0"
   ENABLE_DEBUG="--enable-debug"
else
   CFLAGS="$CFLAGS -O2"
   ENABLE_DEBUG=""
fi

if [ "x$SAGE64" = "xyes" ]; then
    CFLAGS="$CFLAGS -m64"
    CPPFLAGS="$CPPFLAGS -m64"
    CXXFLAGS="$CXXFLAGS -m64"
fi

export CFLAGS
export CPPFLAGS
export CXXFLAGS
export LDFLAGS

# build M4RIE

cd $ROOT_DIR/m4rie/
$ROOT_DIR/m4rie/configure --prefix="$SAGE_LOCAL" --libdir="$SAGE_LOCAL/lib" $ENABLE_DEBUG

if [ $? -ne 0 ]; then
    echo "Error configuring libm4rie"
    exit 1
fi

$MAKE

if [ $? -ne 0 ]; then
    echo "Error building libm4rie"
    exit 1
fi

$MAKE install

if [ $? -ne 0 ]; then
    echo "Error installing libm4rie"
    exit 1
fi

