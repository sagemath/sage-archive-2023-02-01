#!/usr/bin/env bash

if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting";
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

# Apply patches

if [ $UNAME = "Darwin" ]; then
   # See
   # http://duriansoftware.com/joe/PSA:-avoiding-the-%22ucontext-routines-are-deprecated%22-error-on-Mac-OS-X-Snow-Leopard.html
   echo "Patching mach_dep.c -- needed for OS X 10.6"
   $CP patches/mach_dep.c src/
fi

if [ "$SAGE64" = "yes" ]; then
   echo "64 bit build"
   CFLAGS="-O2 -g -fPIC -m64 "; export CFLAGS
   LDFLAGS="-m64"; export LDFLAGS
fi

# See ticket #7336
if [ $UNAME = "CYGWIN" ]; then
    THREADDLLIBS = ""; export THREADDLLIBS
fi

cd src
./configure --prefix=$SAGE_LOCAL --enable-large-config

if [ $? -ne 0 ]; then
   echo "Error configuring BoehmGC."
   exit 1
fi

make
if [ $? -ne 0 ]; then
   echo "Error building BoehmGC."
   exit 1
fi

make install
if [ $? -ne 0 ]; then
   echo "Error installing BoehmGC."
   exit 1
fi

