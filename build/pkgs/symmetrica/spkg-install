#!/usr/bin/env bash

if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting";
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

if [ -z $CFLAG64 ] ; then
   CFLAG64=-m64
fi

if [ "x$SAGE64" = xyes ]; then
   CFLAGS="$CFLAGS $CFLAG64"
   export CFLAGS
fi

CFLAGS="$CFLAGS -O2 -fPIC -g -DFAST -DALLTRUE"
export CFLAGS

cd src
patch < ../patches/de.patch
patch < ../patches/macro.h.patch
patch < ../patches/sort_sum_rename.patch
cp -f ../patches/makefile makefile

$MAKE -f makefile
if [ $? -ne 0 ]; then
    echo "Error building symmetrica."
    exit 1
fi

cp libsymmetrica.a $SAGE_LOCAL/lib/
mkdir -p $SAGE_LOCAL/include/symmetrica
cp def.h macro.h $SAGE_LOCAL/include/symmetrica


