#!/usr/bin/env bash

if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting";
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

if [ `uname` = "Darwin" -a "$SAGE64" = "yes" ]; then
   echo "64 bit MacIntel"
   CFLAGS="$CFLAGS -m64 "; export CFLAGS
fi

cp patches/allfaces.c src/src/

cd src/

# This is needed for cddlib-094, which fails
# to find the gmp headers otherwise.
CFLAGS="-I $SAGE_LOCAL/include -L$SAGE_LOCAL/lib $CFLAGS"
export CFLAGS

./configure --prefix=$SAGE_LOCAL

if [ $? -ne 0 ]; then
   echo "Error configuring cddlib"
   exit 1
fi

$MAKE
if [ $? -ne 0 ]; then
   echo "Error building cddlib"
   exit 1
fi

$MAKE install
if [ $? -ne 0 ]; then
   echo "Error installing cddlib"
   exit 1
fi

