#!/bin/sh
###########################################
## Readline 5.2
###########################################

cd src/

build()
{
    ./configure --prefix=$SAGE_LOCAL
    make install
}

build

if [ -f $SAGE_LOCAL/lib/libreadline.so -o -f $SAGE_LOCAL/lib/libreadline.a ]; then
  chmod 755 $SAGE_LOCAL/lib/libreadline.so*
  chmod 755 $SAGE_LOCAL/lib/libhistory.so*
  exit 0
else
  echo "Error building readline"
  exit 1
fi

