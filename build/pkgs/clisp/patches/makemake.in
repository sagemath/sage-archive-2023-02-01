  echol
  echol
fi


echol "clisp.h clisp-test.c : genclisph.o unixconf.h ${PARAMS_H}"
echotab_to_HEXE "\$(CC) \$(CFLAGS) \$(CLFLAGS)" "genclisph.o" "genclisph"
