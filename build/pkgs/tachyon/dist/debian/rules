#!/usr/bin/make -f

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/makefile.mk
include /usr/share/cdbs/1/rules/patchsys-quilt.mk

#DEB_MAKE_INSTALL_TARGET =

DEB_MAKE_INVOKE += -C unix MPIDIR=/usr

DEB_MAKE_BUILD_TARGET=linux-thr
ifeq ($(DEB_ARCH),i386)
DEB_MAKE_BUILD_TARGET=linux-thr
endif
ifeq ($(DEB_ARCH),ia64)
DEB_MAKE_BUILD_TARGET=linux-ia64-thr
endif
ifeq ($(DEB_ARCH),amd64)
DEB_MAKE_BUILD_TARGET=linux-64-thr
endif
