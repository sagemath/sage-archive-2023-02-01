#!/bin/sh

if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting";
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

cp patches/dpe.h src/src/dpe.h
cp patches/llldiff.h src/src/llldiff.h
cp patches/fplll.h src/src/fplll.h
cp patches/main.cpp src/src/main.cpp

cd src

INCLUDES="-I$SAGE_LOCAL/include/"

CFLAGS="$CFLAGS -fPIC $INCLUDES -L$SAGE_LOCAL/lib"
CXXFLAGS="$CXXFLAGS -fPIC $INCLUDES -L$SAGE_LOCAL/lib"
CPPFLAGS="$INCLUDES"

if [ `uname` = "Darwin" -a "$SAGE64" = "yes" ]; then
   echo "64 bit MacIntel"
   CFLAGS="$CFLAGS -m64"
   CXXFLAGS="$CXXFLAGS -m64"
   CPPFLAGS="$CPPFLAGS -m64"
fi

export CFLAGS
export CXXFLAGS
export CPPFLAGS

./configure --prefix=$SAGE_LOCAL --includedir=$SAGE_LOCAL/include/fplll

if [ $? -ne 0 ]; then
    echo "Error configuring libfplll"
    exit 1
fi

$MAKE
if [ $? -ne 0 ]; then
    echo "Error building libfplll"
    exit 1
fi

$MAKE install
if [ $? -ne 0 ]; then
    echo "Error installing libfplll"
    exit 1
fi

