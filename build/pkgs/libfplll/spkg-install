#!/bin/sh

INCLUDES="-I$SAGE_LOCAL/include/ -I$SAGE_LOCAL/include/python2.5/ -I$SAGE_LOCAL/include/NTL/"

CFLAGS="$CFLAGS -fPIC $INCLUDES"
CXXFLAGS="$CXXFLAGS -fPIC $INCLUDES"
CPPFLAGS="$INCLUDES"
export CFLAGS
export CXXFLAGS
export CPPFLAGS

./configure --prefix=$SAGE_LOCAL --includedir=$SAGE_LOCAL/include/fplll

f [ $? -ne 0 ]; then
    echo "Error configuring libcsage"
    exit 1
fi

$MAKE
if [ $? -ne 0 ]; then
    echo "Error building libcsage"
    exit 1
fi

$MAKE install
if [ $? -ne 0 ]; then
    echo "Error installing libcsage"
    exit 1
fi

